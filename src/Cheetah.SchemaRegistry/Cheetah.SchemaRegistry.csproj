<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <AssemblyName>Cheetah.SchemaRegistry</AssemblyName>
        <Authors>Trifork</Authors>
        <Description>Adds Avro serialization for use with Cheetah.Kafka</Description>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <RepositoryUrl>https://github.com/trifork/cheetah-lib-shared-dotnet</RepositoryUrl>
        <RootNamespace>Cheetah.SchemaRegistry</RootNamespace>
        <TargetFrameworks>net6.0;net7.0;net8.0</TargetFrameworks>
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
        <Nullable>enable</Nullable>
        <VersionPrefix>2.1.0</VersionPrefix>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Confluent.SchemaRegistry" Version="2.5.3" />
      <PackageReference Include="Confluent.SchemaRegistry.Serdes.Avro" Version="2.5.3" />
      <PackageReference Include="Microsoft.Extensions.Logging.Abstractions" Version="8.0.2" />
      <PackageReference Include="System.Text.Json" Version="8.0.5"/>
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Cheetah.Kafka\Cheetah.Kafka.csproj" />
    </ItemGroup>

</Project>
